generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:Hamza@127.0.0.1:3306/inbox_pilot"
}

model User {
    id   String @id @default(cuid())
    name String?
    email String @unique
    emailVerified   DateTime?  
    plan      PlanType @default(FREE)
    emailsGenerated Int @default(0)
    emailLimit Int @default(5)

    subscription Subscription[]
    emails   Email[]   // back-relation
    campaigns Campaign[] // back relation
    sessions Session[]  // back-relation
    accounts Account[]  // back-relation
} 

model Subscription {
  id              String   @id @default(cuid())
  userId          String   @unique
  subscriptionId  String   @unique // from Lemon Squeezy
  customerId      String?         // optional
  status          String          // active, canceled, past_due, etc.
  plan            String?
  renewsAt        DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id])
}


enum PlanType {
  FREE
  TEMPLATE
  WEBSITE_PERSONALIZATION
  LINKEDIN_PERSONALIZATION
}

model WebsiteData {
  id         String   @id @default(cuid())
  emailId    String   @unique
  domain     String
  headline   String?
  subHeadline String?
  pageText   String? @db.Text  // Full text for LLM parsing
  createdAt  DateTime @default(now())

  email      Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
}

model Email {
    id  String @id @default(cuid())
    userId String
    campaignId String
    recipentEmail String?
    recipentName String?
    companyName String
    Tone String?
    emailType  EmailType @default(TEMPLATE) // TEMPLATE | WEBSITE_PERSONALIZED | LINKEDIN_PERSONALIZED
    subject String
    intro String @db.Text
    body String @db.Text
    cta String @db.Text
    closing String @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    replies Reply[]
    WebsiteData WebsiteData?
    emailQuality EmailQuality[]

    user User @relation(fields: [userId], references: [id])
    campaign   Campaign @relation(fields: [campaignId], references: [id])
}

enum EmailType {
  TEMPLATE
  WEBSITE_PERSONALIZED
  LINKEDIN_PERSONALIZED
}

model Campaign {
  id      String @id @default(cuid())
  userId  String
  title   String
  goal    String
  status  CampaignStatus @default(ACTIVE)
  emailsSent Int @default(0)
  startDate DateTime
  endDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  emails Email[]
}

model Reply {
  id        String   @id @default(cuid())
  emailId   String
  createdAt DateTime @default(now())
  content   String?

  email     Email @relation(fields: [emailId], references: [id])
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailQuality {
  id          String   @id @default(cuid())
  emailId     String   @unique
  personalizationScore Int
  websiteContextScore   Int
  readabilityGrade      Float
  toneMatched           Boolean
  createdAt   DateTime @default(now())

  email Email @relation(fields: [emailId], references: [id])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}
